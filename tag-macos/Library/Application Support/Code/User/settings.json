{
  // Window
  "window.restoreWindows": "none",
  // Workbench
  "workbench.iconTheme": "material-icon-theme",
  // Editor
  // Controls the font size in pixels.
  "editor.fontSize": 14,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.wordWrapColumn": 100,
  "editor.rulers": [100],
  "editor.wordWrap": "wordWrapColumn",
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  // Format a file on save. A formatter must be available, the file must not be auto-saved, and editor must not be shutting down.
  "editor.formatOnSave": false,
  //"editor.formatOnSaveTimeout": 3000,
  // Files
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  // Terminal
  "terminal.integrated.rendererType": "dom",
  "terminal.integrated.inheritEnv": false,
  // Language specific
  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // JS
  "[javascript]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  // Markdown
  "[markdown]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.wordWrapColumn": 100,
    "editor.wordWrap": "wordWrapColumn",
  },
  // MDX
  "[mdx]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.wordWrapColumn": 100,
    "editor.wordWrap": "wordWrapColumn",
  },
  // FSharp
  "[fsharp]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  // Python
  // Folders in your home directory to look into for virtual environments.
  "python.venvFolders": [
    "envs",
    ".pyenv",
    ".direnv",
    ".local/share/virtualenvs"
  ],
  // Default Python interpreter / path
  "python.pythonPath": "~/miniconda3/bin/python",
  "python.formatting.provider": "black",
  // Vim
  // Non-recursive remapped keys in normal mode. Allows mapping to vim commands or vscode actions. See README for more.
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      "before": ["k", "j"],
      "after": ["<Esc>"]
    }
  ],
  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  // PowerShell
  // Recommended per https://docs.microsoft.com/en-us/powershell/scripting/core-powershell/vscode/using-vscode?view=powershell-6#configuration-settings-for-visual-studio-code
  "csharp.suppressDotnetRestoreNotification": true,
  "omnisharp.projectLoadTimeout": 120,
  // Markdown-pdf
  // pdf only. Display header and footer.
  "markdown-pdf.displayHeaderFooter": false,
  // FSharp
  // Choose the runtime of FsAutocomplete (FSAC). Requires restart.
  //"FSharp.fsacRuntime": "netcore",
  // The path to the F# Interactive tool used by Ionide-FSharp
  //"FSharp.fsiFilePath": "/usr/local/bin/dotnet",
  // Allows to pass extra parameters to FSI process
  //"FSharp.fsiExtraParameters": [
  //  "fsi",
  // "--readline"
  //],
  "FSharp.useSdkScripts": true,
  "FSharp.suggestGitignore": false,
  // Julia
  "julia.enableTelemetry": true,
  "files.associations": {
    "*.md": "markdown"
  }
}
